<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_linear"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="20dp"
    android:background="@drawable/ic_loginfield"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/compImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@android:color/holo_red_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="5"
            android:text="Google"
            android:textColor="@color/colorHeaven"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/view_Salary"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="5"
            android:gravity="right"
            android:text="RM5000"
            android:textColor="@color/colorLogin"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alternative_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollDetail"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name:"
                    android:textColor="@color/colorHeaven"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/compName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Google Inc."
                    android:textColor="@color/colorLogin"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/websiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Website:"
                    android:textColor="@color/colorHeaven"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/compWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="https://about.google/intl/en/"
                    android:textColor="@color/colorLogin"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/contactText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Number:"
                    android:textColor="@color/colorHeaven"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/compContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="0142594964"
                    android:textColor="@color/colorLogin"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textColor="@color/colorHeaven"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/compLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Kuala Lumpur"
                    android:textColor="@color/colorLogin"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/salaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary:"
                    android:textColor="@color/colorHeaven"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/compSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="RM5000"
                    android:textColor="@color/colorLogin"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/taskText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Position:"
                    android:textColor="@color/colorHeaven"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/compTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Software Engineering"
                    android:textColor="@color/colorLogin"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/availableText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/colorHeaven"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/compAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Available"
                    android:textColor="@color/colorLogin"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/view_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_buttonsquare"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/colorField"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>