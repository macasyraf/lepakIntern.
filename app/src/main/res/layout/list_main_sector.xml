<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/jobView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        app:cardBackgroundColor="@color/colorField"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/jobImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:srcCompat="@color/colorAccent" />

        <TextView
            android:id="@+id/compTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="140dp"
            android:text="Google Inc."
            android:textColor="@color/colorHeaven"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jobLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="170dp"
            android:text="Kuala Lumpur"
            android:textColor="@color/colorLogin" />

        <TextView
            android:id="@+id/compSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="153dp"
            android:layout_marginRight="15dp"
            android:text="RM5000"
            android:textColor="@color/colorLogin"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/viewAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/ic_available"
            android:padding="5dp"
            android:text="Available"
            android:textColor="@color/colorHeaven"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

</LinearLayout>